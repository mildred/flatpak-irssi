    {
      "name": "perl-Cwd",
      "buildsystem": "simple",
      "build-commands": [
        "perl Makefile.PL",
        "make",
        "make install"
      ],
      "post-install": [
        "find /app/lib ! -writable -exec chmod u+w '{}' +"
      ],
      "ensure-writable": [
        "/lib/perl5/*/*/perllocal.pod",
        ".packlist"
      ],
