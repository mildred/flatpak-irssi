{
    "app-id": "fr.mildred.irssi",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.30",
    "sdk": "org.gnome.Sdk",
    "command": "irssi",
    "finish-args": [
        "--share=network",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=~/.irssi"
    ],
    "modules": [
        {
            "name": "irssi-appdata",
            "buildsystem": "simple",
            "build-commands": [
                "install -D -m644 -t /app/share/metainfo fr.mildred.irssi.appdata.xml"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "fr.mildred.irssi.appdata.xml"
                }
            ]
        },
        {
            "name": "irssi",
            "buildsystem": "autotools",
            "config-opts": [
            ],
            "post-install": [
                "chmod 755 /app/lib/perl5/x86_64-linux/auto/Irssi/Irssi.so",
                "chmod 755 /app/lib/perl5/x86_64-linux/auto/Irssi/Irc/Irc.so",
                "chmod 755 /app/lib/perl5/x86_64-linux/auto/Irssi/UI/UI.so",
                "chmod 755 /app/lib/perl5/x86_64-linux/auto/Irssi/TextUI/TextUI.so"
            ],
            "sources": [
                {
                    "type": "git",
                    "url":  "https://github.com/irssi/irssi.git",
                    "tag":  "1.1.1"
                }
            ],
            "modules": [
                "perl.json"
            ]
        },
        "perl/base.json",
        "perl/Carp-Heavy.json",
        "perl/Carp.json",
        "perl/Compress-Raw-Bzip2.json",
        "perl/Compress-Raw-Zlib.json",
        "perl/constant.json",
        "perl/CPAN-Meta-Requirements.json",
        "perl/Cwd.json",
        "perl/Data-Dumper.json",
        "perl/Digest-base.json",
        "perl/Digest-MD5.json",
        "perl/Encode-Alias.json",
        "perl/Encode.json",
        "perl/Encode-Locale.json",
        "perl/Exporter.json",
        "perl/ExtUtils-CBuilder.json",
        "perl/ExtUtils-Constant.json",
        "perl/ExtUtils-MakeMaker.json",
        "perl/File-Listing.json",
        "perl/File-Path.json",
        "perl/File-Spec.json",
        "perl/File-Temp.json",
        "perl/Getopt-Long.json",
        "perl/HTML-Entities.json",
        "perl/HTML-HeadParser.json",
        "perl/HTML-Tagset.json",
        "perl/HTTP-Cookies.json",
        "perl/HTTP-Daemon.json",
        "perl/HTTP-Date.json",
        "perl/HTTP-Headers.json",
        "perl/HTTP-Headers-Util.json",
        "perl/HTTP-Negotiate.json",
        "perl/HTTP-Request-Common.json",
        "perl/HTTP-Request.json",
        "perl/HTTP-Response.json",
        "perl/HTTP-Status.json",
        "perl/IO-Compress-Bzip2.json",
        "perl/IO-Compress-Deflate.json",
        "perl/IO-Compress-Gzip.json",
        "perl/IO-File.json",
        "perl/IO-Handle.json",
        "perl/IO-HTML.json",
        "perl/IO-Seekable.json",
        "perl/IO-Select.json",
        "perl/IO-Socket-INET.json",
        "perl/IO-Socket.json",
        "perl/IO-Uncompress-Bunzip2.json",
        "perl/IO-Uncompress-Gunzip.json",
        "perl/IO-Uncompress-Inflate.json",
        "perl/IO-Uncompress-RawInflate.json",
        "perl/IPC-Cmd.json",
        "perl/List-Util.json",
        "perl/Locale-Maketext-Simple.json",
        "perl/LWP.json",
        "perl/LWP-MediaTypes.json",
