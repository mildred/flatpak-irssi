        "perl/Params-Check.json",
        "perl/parent.json",
        "perl/Perl-OSType.json",
        "perl/Pod-Escapes.json",
        "perl/Pod-Man.json",
        "perl/Pod-Simple.json",
        "perl/Pod-Text.json",
        "perl/Pod-Usage.json",
        "perl/Scalar-Util.json",
        "perl/Socket.json",
        "perl/Storable.json",
        "perl/Test-Harness.json",
        "perl/Test.json",
        "perl/Test-More.json",
        "perl/Text-ParseWords.json",
        "perl/Text-Wrap.json",
        "perl/Time-Local.json",
        "perl/Try-Tiny.json",
